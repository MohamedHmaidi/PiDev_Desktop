<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AjouterEventController">
   <children>
      <TextField fx:id="titleTf" layoutX="39.0" layoutY="53.0" promptText="title" />
      <TextField fx:id="typeTf" layoutX="39.0" layoutY="102.0" promptText="type" />
      <TextArea fx:id="descTa" layoutX="39.0" layoutY="143.0" prefHeight="70.0" prefWidth="215.0" promptText="description" />
      <DatePicker fx:id="startDateDp" layoutX="39.0" layoutY="229.0" promptText="start date" />
      <DatePicker fx:id="endDateDp" layoutX="39.0" layoutY="272.0" promptText="end date" />
      <TextField fx:id="ticketCountTf" layoutX="39.0" layoutY="313.0" promptText="ticker count" />
      <Button fx:id="uploadImgBtn" layoutX="338.0" layoutY="66.0" mnemonicParsing="false" onAction="#onUploadButtonClick" text="Upload Image" />
      <Button fx:id="addBtn" layoutX="458.0" layoutY="326.0" mnemonicParsing="false" onAction="#addEvent" text="Add Event" />
      <Button fx:id="eventListBtn" layoutX="458.0" layoutY="361.0" mnemonicParsing="false" onAction="#eventList" text="Afficher Liste Events" />
